<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="header" minWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HeaderController">
   <children>
      <HBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox minWidth="150.0" spacing="20.0">
               <children>
                  <Button fx:id="menu_btn" mnemonicParsing="false" onAction="#irMenu" style="-fx-text-fill: #000000; -fx-background-color: #3f9eff; -fx-border-color: #3f9eff; -fx-border-radius: 4px; -fx-background-radius: 4px;" text="Menú principal">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets left="20.0" top="20.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="titulo">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="TOP_RIGHT" minWidth="150.0" spacing="20.0">
               <children>
                  <Button fx:id="logout_btn" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#logout" style="-fx-text-fill: #000000; -fx-background-color: #ff9f3f; -fx-border-color: #ff9f3f; -fx-border-radius: 4px; -fx-background-radius: 4px;" text="Cerrar sesión">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets right="20.0" top="20.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
