<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
     <children>
        <VBox alignment="TOP_CENTER" layoutX="60.0" prefHeight="200.0" prefWidth="100.0" spacing="15.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>

                        <ImageView id="logo" cache="true" fitHeight="150.0" fitWidth="200.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                           <image>
                              <Image url="@res/AssiCoLogo@0,1x.png" />
                           </image>
                           <effect>
                              <Glow />
                           </effect>
                        </ImageView>
                        <TextField fx:id="usuario" maxWidth="200.0" promptText="Usuario" />
                        <PasswordField fx:id="clave" maxWidth="200.0" onKeyPressed="#alAccederTeclado" promptText="Clave" />

                        <Hyperlink fx:id="olvido" text="¿Ha olvidado su clave?" />

                        <Button fx:id="acceder" mnemonicParsing="false" onAction="#alAcceder" onKeyPressed="#alAccederTeclado" style="-fx-text-fill: #000000; -fx-background-color: #dddddd; -fx-border-color: #cccccc; -fx-border-radius: 4px; -fx-background-radius: 4px;" text="Acceder" />

                        <Label alignment="TOP_CENTER" maxWidth="440.0" minHeight="50.0" minWidth="300.0" text="Usamos los datos facilitados en este formulario únicamente con el fin de validar la cuenta del usuario y tener constancia de las sesiones que se crean tras verificar la cuenta. Al pulsar Acceder/Intro se enviará la petición al servidor." textAlignment="CENTER" wrapText="true" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="281.0" AnchorPane.rightAnchor="280.0" AnchorPane.topAnchor="350.0">
                            <font>
                                <Font size="10.0" />
                            </font>
                        </Label>

                        <Label text="© 2018 AssiCo" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="281.0" AnchorPane.rightAnchor="280.0" AnchorPane.topAnchor="350.0">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            </children>
        </VBox>
     </children>
</AnchorPane>
