<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-image: url(/view/res/Fondo2.png); -fx-background-position: center; -fx-background-repeat: no-repeat; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="60.0" prefWidth="100.0" spacing="20.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <VBox alignment="TOP_CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <ImageView id="logo" cache="true" fitHeight="185.0" fitWidth="185.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@res/AssiCoLogo.png" />
                            </image>
                            <effect>
                        <Glow />
                            </effect>
                        </ImageView>
                        <Label fx:id="desc" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="600.0" minHeight="-Infinity" minWidth="570.0" text="Tu Asistente de Coordinación Académica" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <VBox alignment="TOP_CENTER" maxWidth="960.0" spacing="20.0" style="-fx-background-color: rgba(0, 0, 0, 0.05);-fx-background-radius: 5px;">
                            <children>
                                <HBox alignment="CENTER" spacing="20.0">
                                   <children>
                                      <TextField fx:id="usuario" maxWidth="200.0" promptText="Usuario">
                                         <font>
                                            <Font size="16.0" />
                                         </font>
                                      </TextField>
                                      <PasswordField fx:id="clave" maxWidth="200.0" onKeyPressed="#alAccederTeclado" promptText="Clave">
                                         <font>
                                            <Font size="16.0" />
                                         </font>
                                      </PasswordField>
                                   </children>
                                </HBox>
                                <HBox alignment="CENTER" layoutX="10.0" layoutY="30.0" spacing="20.0">
                                   <children>
                                      <Button fx:id="acceder" mnemonicParsing="false" onAction="#alAcceder" onKeyPressed="#alAccederTeclado" prefWidth="200.0" style="-fx-text-fill: #000000; -fx-background-color: #cccccc; -fx-border-color: transparent; -fx-border-radius: 4px;" text="Acceder" textOverrun="CLIP" HBox.hgrow="ALWAYS">
                                         <font>
                                            <Font size="16.0" />
                                         </font>
                                         <HBox.margin>
                                            <Insets />
                                         </HBox.margin>
                                      </Button>
                                   </children>
                                </HBox>
                                <Label fx:id="legal" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="800.0" minHeight="-Infinity" minWidth="600.0" text="Usamos los datos facilitados en este formulario únicamente con el fin de validar la cuenta del usuario y tener constancia de las sesiones que se crean tras verificar la cuenta. Al pulsar Acceder/Intro se enviará la petición al servidor y será tratada." textAlignment="CENTER" wrapText="true" VBox.vgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" />
                                    </VBox.margin>
                                </Label>
                            </children>
                            <padding>
                                <Insets bottom="20.0" top="20.0" />
                            </padding>
                        </VBox>
                    </children>
                </VBox>
                <fx:include source="intFooter.fxml" />
            </children>
        </VBox>
    </children>
</AnchorPane>
