                     <children>
                        <Button fx:id="menu_masters" mnemonicParsing="false" onAction="#irMasters" prefHeight="60.0" prefWidth="200.0" style="-fx-text-fill: #000000; -fx-background-color: #ffb84c; -fx-border-color: #ffb84c; -fx-border-radius: 4px; -fx-background-radius: 4px;" text="Másters">
