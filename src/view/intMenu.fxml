                          </items>
                           <font>
                              <Font size="20.0" />
                           </font>
                        </MenuButton>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
               <children>
                   <fx:include source="intFooter.fxml" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
